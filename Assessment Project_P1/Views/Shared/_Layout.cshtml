<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="p-0">

    


        <div class="navbar navbar-expand navbar-dark bg-dark p-2 ">
            <div class="container">
                <div class="navbar-header">
              
                    @Html.ActionLink("Lecturer DashBoard", "Index", "Student", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Student list", "ListOfStudent", "Lecturer", null, new { @class = "text-white mx-2" })</li>
                        <li>@Html.ActionLink("Degree list", "ListOfDegrees", "Lecturer", null, new { @class = "text-white mx-2" })</li>
                        li>@Html.ActionLink("Add Student", "AddstudentToDegree", "Lecturer", null, new { @class = "text-white mx-2" })</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("validate", required: false)
</body>
</html>
